<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/newSubTaskImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/large_margin"
      android:src="@drawable/ic_add"
      android:contentDescription="@string/app_name"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/large_margin"
      android:text="@string/next_step"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textColor="@color/dark_blue"
      app:layout_constraintBottom_toBottomOf="@id/newSubTaskImageView"
      app:layout_constraintStart_toEndOf="@id/newSubTaskImageView"
      app:layout_constraintTop_toTopOf="@id/newSubTaskImageView" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
